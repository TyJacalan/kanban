<div class='h-full w-full flex flex-col gap-4'>
  <p style="color: green"><%= notice %></p>

  <h1>Kanbans</h1>

  <%= link_to "New kanban", new_kanban_path, class: 'w-fit px-4 py-2 bg-blue-600 text-gray-200 rounded-md hover:bg-blue-500 hover:cursor-pointer' %>

  <div id="kanbans" class='flex flex-col gap-4'>
    <% @kanbans.each do |kanban| %>
      <%= link_to kanban, class: 'p-6 rounded-md bg-slate-200 shadow-md hover:scale-105 hover:shadow-lg transition-all' do %>
        <%= render kanban %>
      <% end %>
    <% end %>
  </div>

</div>
