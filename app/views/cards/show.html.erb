<div class='flex flex-col gap-4'>
  <%= render 'shared/breadcrumb', path: kanban_path(@kanban), text: "Back to #{@kanban.name}" %> 

  <h1><%= @card.content %></h1>

  <%= link_to "Edit", edit_kanban_kanban_column_card_path(@kanban, @kanban_column, @card), class: 'w-fit min-w-24 px-4 py-2 border border-gray-400 rounded-md text-center hover:bg-gray-100 transition-colors'%>
  <%= button_to "Delete", kanban_kanban_column_card_path(@kanban, @kanban_column, @card), method: :delete, data: { confirm: "Are you sure you want to delete this card?" }, class: 'min-w-24 px-4 py-2 rounded-md bg-red-500 hover:bg-red-400 text-white transition-colors' %>
</div>

